.category-menu-wrap {
  width: 100%;
  max-height: 600rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: stretch;
  background-color: #fff;
}

.category-menu-scroll {
  width: 50%;
  overflow: scroll;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
}

.category-menu-left-item {
  background-color: #f2f2f2;
  text-align: left;
  padding-left: 24rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 26rpx;
  color: #333;
}

.category-menu-left-item-select {
  background-color: #fff;
  text-align: left;
  padding-left: 24rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 26rpx;
  color: #333;
}

.category-menu-right-item {
  background-color: #fff;
  text-align: left;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.1);
  font-size: 26rpx;
  color: #333;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.category-menu-right-item-select {
  background-color: #fff;
  text-align: left;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 2rpx solid #e53935;
  font-size: 26rpx;
  color: #e53935;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.category-menu-img {
  width: 28rpx;
  height: 28rpx;
}
