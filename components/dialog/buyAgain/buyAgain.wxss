.again-product-item {
  display: flex;
  padding: 24rpx; 
}
.again-product-item .add-product-cut-down {
  position: relative;
  width: 136rpx;
  height: 136rpx;
}
.add-product-cut-down image {
  display: block;
  width: 100%;
  height: 100%;
}
.add-product-cut-down .usedhb{
    position: absolute;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    text-align: center;
    color: #FFFFFF;
    width: 100%;
    height: 32rpx;
    font-size: 24rpx;
    line-height: 32rpx;
}
.again-product-item .product-info {
  flex: 1;
  padding-left: 24rpx;
  font-size: 24rpx;
  color: #666;
}
.again-product-item .product-name {
    font-size: 28rpx;
    line-height: 36rpx;
    color: #333;
    margin-bottom: 4rpx;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    word-break: break-all;
    overflow: hidden;
}
.not-buy-title {
    line-height: 1;
    font-size: 28rpx;
    color: #333;
    padding: 24rpx;
}
.bg-gary {
  background: #e8eaed;
}
.but-again-btn {
    position: fixed;
    bottom: 0;
    left: 0;
    display: block;
    width: 100%;
    height: 88rpx;
    background: #e63935;
    color: #fff;
    font-size: 28rpx;
    line-height: 88rpx;
    text-align: center;
}
.gary-img {
  opacity: 0.6
}