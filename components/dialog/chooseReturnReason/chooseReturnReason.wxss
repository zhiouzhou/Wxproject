.address-list-wrap {
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
}

.address-item {
  margin-bottom: 16rpx;
}

.original-buy-img {
  width: 24rpx;
  height: 24rpx;
}

.select-tri-icon {
  width: 0;
  height: 0;
  border-top: 24rpx solid transparent;
  border-bottom: 24rpx solid transparent;
  border-right: 24rpx solid #e53935;
  display: inline-block;
}

.select-tri-confirm-button {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  text-align: center;
  line-height: 98rpx;
  background-color: #e53935;
  margin: 0 -24rpx;
}

.ta-class {
  border: 2rpx solid rgba(0, 0, 0, 0.1);
  height: 160rpx;
  width: 100%;
  padding: 12rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #333;
}
