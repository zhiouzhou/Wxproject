.shop-coupons {
  flex: 1;
  padding: 0 24rpx;
  box-sizing: border-box;
  overflow-y: scroll;
}

.shop-coupon {
  border: 1rpx solid #e5e5e5;
  height: 156rpx;
  display: flex;
  flex-direction: row;
  align-items: stretch;
  margin-top: 24rpx;
}

.coupon-left {
  width: 158rpx;
  position: relative;
}

.coupon-left-img, .coupon-right-img {
  position: absolute;
  width: 100%;
  height: 100%;
}

.coupon-left-content {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.coupon-middle {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 32rpx 16rpx 24rpx 16rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.coupon-right {
  width: 151rpx;
  position: relative;
}

.coupon-right-content {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.receive-button-unreceived {
  width: 110rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 26rpx;
  color: #fff;
  padding: 8rpx 0;
  background-color: #ef5350;
  border-radius: 30rpx;
}

.receive-button-received {
  width: 110rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 26rpx;
  color: #bdbdbd;
  padding: 8rpx 0;
  background-color: #e5e5e5;
  border-radius: 30rpx;
}

.coupons-sale-out-img {
  width: 112rpx;
  height: 112rpx;
}

