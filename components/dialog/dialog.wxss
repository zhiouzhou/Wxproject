.yjp-backdrop {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 49;
  background-color: rgba(0, 0, 0, 0.4);
}

.yjp-dialog {
  position: fixed;
  z-index: 50;
  width: 80%;
  max-width: 600rpx;
  max-height: 750rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #fff;
  text-align: center;
  border-radius: 32rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.yjp-dialog__title {
  width: 100%;
  margin-top: 32rpx;
  font-size: 34rpx;
  color: #333;
}

.yjp-dialog__content {
  width: 100%;
  padding: 24rpx;
  box-sizing: border-box;
  overflow-y: scroll;
}

.yjp-dialog__ft {
  width: 100%;
  height: 90rpx;
  min-height: 90rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
  border-top: 2rpx solid #e8eaed;
  box-sizing: border-box;
}

.yjp-dialog__btn {
  flex: 1;
  text-align: center;
  height: 100%;
  line-height: 90rpx;
}

.yjp-dialog__btn-divider {
  width: 2rpx;
  height: 90rpx;
  background-color: #e8eaed;
}

.half-window-dialog-wrap {
  position: fixed;
  z-index: 9999;
  width: 100%;
  height: 60%;
  bottom: 0;
  background-color: #fff;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
}

.half-window-dialog-hd {
  position: relative;
  height: 72rpx;
  min-height: 72rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.1);
}

.half-window-dialog-title {
  position: absolute;
  font-size: 28rpx;
  color: #666;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
}

.half-window-dialog-quit {
  position: absolute;
  top: 50%;
  right: 24rpx;
  -webkit-transform: translate(0, -50%);
  transform: translate(0, -50%);
  width: 48rpx;
  height: 48rpx;
}

.pull-down-dialog-wrap {
  position: fixed;
  z-index: 50;
  width: 100%;
  background-color: #fff;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
}

.half-window-no-title-dialog-wrap {
  position: fixed;
  z-index: 50;
  width: 100%;
  bottom: 0;
  background-color: #fff;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: stretch;
}

.complete-button {
  position: absolute;
  bottom: 0;
  height: 98rpx;
  width: 100%;
  background-color: #e53935;
  text-align: center;
  line-height: 98rpx;
  font-size: 36rpx;
  color: #fff;
}

.apply-buy-dialog-wrap {
  position: fixed;
  z-index: 50;
  width: 100%;
  height: 60%;
  bottom: 0;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: stretch;
}
