.dealer-coupons-wrap {
  background: #fff;
  height: 100%;
  width: 100%;
  box-sizing: border-box;
}

.dealer-coupon-wrap, .dealer-cant-use-coupon-wrap {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  box-sizing: border-box;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.1);
}

.dealer-coupon-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.dealer-coupon-img {
  height: 48rpx;
  width: 48rpx;
  margin-left: 16rpx;
}

.dealer-coupons-button {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  text-align: center;
  line-height: 98rpx;
  background-color: #e53935;
  margin: 0 -24rpx;
}

.dealer-coupons-line {
  margin-top: 24rpx;
  width: 100%;
  height: 2rpx;
  border-bottom: 2rpx dashed #bdbdbd;
}
