
.yjp-backdrop {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 49;
  background-color: rgba(0, 0, 0, 0.4);
}
.wxParse-p{
  line-height: 1.6;
}
.dialog-message-box {
    z-index: 10001;
    width: 560rpx;
    position: fixed;
    left: 50%;
    top: 50%;
    border-radius: 16rpx;
    -webkit-transform: translate(-50%,-50%);
    transform: translate(-50%,-50%);
}
.dialog-message-ct{
  background: #fff;
  border-radius: 16rpx;
  position: relative;
}
.dialog-message-header{
  height: 88rpx;
  background: #d91f2f;
  position: relative;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}
.dialog-message-header image{
  height: 88rpx;
  width: 560rpx;
}
.dialog-message-header .title{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 30rpx;
}
.dialog-message-content{
  color: #666;
  font-size: 24rpx;
  max-height: 300rpx;
  overflow-y: scroll;
  margin: 22rpx 30rpx;
}
.dialog-message-btn{
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #d91f2f;  
  font-size: 30rpx;
  border-top: 1rpx solid #c8c8cd;
}
.dialog-message-close{
  position: absolute;
  right: 0;
  top: -88rpx;
  width: 56rpx;
  height: 88rpx;
}
.dialog-message-close image{
  width: 56rpx;
  height: 88rpx;
}