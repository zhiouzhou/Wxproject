/* pages/exchange/exChangeTwo.wxss */
page {
  background: #F2F2F2;
  padding-bottom: 178rpx;
}
.exchange-goods-prompt {
  display: flex;
  align-items: flex-start;
  padding: 24rpx 70rpx 24rpx 16rpx;
  background:rgba(255,250,243,1);
  position: relative;
  font-size: 24rpx;
  color: #333;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}
.exchange-goods-title {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #E53935;
  color: #E53935;
  font-size: 22rpx;
  word-break: keep-all;
  height: 28rpx;
  min-width: 52rpx;
  margin-right: 16rpx;
  border-radius: 2px;
}
.exchange-goods-prompt .close-icon {
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: 24rpx;
  right: 16rpx;
}
.exchange-header {
  position: fixed;
  left: 0;
  width: 100%;
  top: 0;
  z-index: 99;
  background: #fff;
}
/* tab 过滤  */
.exchange-tab {
  font-size: 28rpx;
  color: #333;
  background: #fff;
  position: relative;
}
.exchange-navbar {
  display: flex;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
}
.exchange-nav-item {
  flex: 1;
  height: 88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.exchange-nav-img {
  width:32rpx;
  height:32rpx;
  margin-left:8rpx;
}
.exchange-nav-item.selected {
  color: #e53935;
}
.empty-product-list {
  padding: 24rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}

.empty-product-list-img {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 40rpx;
}
.total-price-wrapper {
  position: fixed;
  bottom: 88rpx;
  height: 56rpx;
  line-height: 56rpx;
  width: 100%;
  font-size: 24rpx;
  background:rgba(255,250,243,1);
  color: #333;
  text-align: center;
  z-index: 99;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}
.exchang-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #ffffff;
  height: 98rpx;
  display: flex;
  justify-content: flex-end;
  background:rgba(255,255,255,1);
  z-index: 99;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
}
.exchang-bottom .next-left {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 24rpx;
}
.exchang-bottom .goods-price {
  color: #333;
  font-size: 28rpx;
}
.exchang-bottom .next-right {
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  width: 200rpx;
  height: 98rpx;
  background: #E53935;
  color: #ffffff;
  font-size: 32rpx;
  text-align: center;
  line-height: 98rpx;
}
.exchang-bottom .next-right.bg-gary {
  background: #999;
}
.link-more {
  position: absolute;
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  right: 24rpx;
}
/* 类目选择列表  */
.category-wrap {
  width:100%;
  max-height:600rpx;
  display:flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:stretch;
  background-color:#fff;
  position: absolute;
  top: 100%;
  left: 0;
}
.category-scroll {
  width:50%;
  overflow:scroll;
  display:flex;
  flex-direction:column;
  justify-content:flex-start;
  align-items:stretch;

}
.category-left-item {
  background-color:#f2f2f2;
  text-align:left;
  padding-left:24rpx;
  height:88rpx;
  line-height:88rpx;
  font-size:26rpx;
  color:#333;
}
.category-left-item.selected {
  background-color: #fff;
}
.category-right-item {
  background-color:#fff;
  text-align:left;
  height:88rpx;
  line-height:88rpx;
  border-bottom:2rpx solid rgba(0, 0, 0, 0.1);
  font-size:26rpx;
  color:#333;
  display:flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
}
.category-right-item.selected {
  border-bottom:2rpx solid #e53935;
  color:#e53935;
}
.category-img {
  width:28rpx;
  height:28rpx;
}
/*品牌列表  */
.brand-wrap {
  width:100%;
  max-height:600rpx;
  display:flex;
  flex-direction:column;
  justify-content:flex-start;
  align-items:stretch;
  background-color:#fff;
  position: absolute;
  top:100%;
  left: 0;
}
.brand-scroll {
  width:100%;
  padding:0 24rpx;
  box-sizing:border-box;
  overflow:scroll;
}
.brand-item {
  background-color:#fff;
  text-align:left;
  height:88rpx;
  line-height:88rpx;
  border-bottom:2rpx solid rgba(0, 0, 0, 0.1);
  font-size:26rpx;
  color:#333;
  display:flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
}
.brand-item.selected {
 border-bottom:2rpx solid #e53935;
 color: #e53935; 
}
.yjp-backdrop {
  position:fixed;
  top:0;
  right:0;
  bottom:0;
  left:0;
  z-index:49;
  background-color:rgba(0, 0, 0, 0.4);
}
/* 搜索框 */
.search-tab {
  display: flex;
  height: 88rpx;
  align-items: center;
  padding: 14rpx 24rpx;
  box-sizing: border-box;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}
.search-warp {
  flex: 1;
  height: 60rpx;
  display: flex;
  align-items: center;
  border-radius: 8rpx;
  background: #F2F2F2;
  padding: 0 27rpx;
  box-sizing: border-box;
}
.search-warp image {
  width: 26rpx;
  height: 26rpx;
  display: inline-block;
  margin-right: 11rpx;
}
.search-warp input {
  flex: 1;
  background: transparent;
  color: #333;
  font-size: 24rpx;
}
.search-tab .search-text{
  line-height: 88rpx;
  padding-left: 24rpx;
  font-size: 26rpx;
  color: #333;
}