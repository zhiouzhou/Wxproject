/* pages/exchange/exchangeOne.wxss */
page {
  background: #F2F2F2;
  padding-bottom: 122rpx;
}
.exchange-goods-prompt {
  display: flex;
  align-items: flex-start;
  padding: 24rpx 70rpx 24rpx 16rpx;
  background:rgba(255,250,243,1);
  position: relative;
  font-size: 24rpx;
  color: #333;

}
.exchange-goods-title {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #E53935;
  color: #E53935;
  font-size: 22rpx;
  word-break: keep-all;
  height: 28rpx;
  min-width: 52rpx;
  margin-right: 16rpx;
  border-radius: 2px;
}
.exchange-goods-prompt .close-icon {
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: 24rpx;
  right: 16rpx;
}
.goods-list-title {
  padding: 29rpx 24rpx;
  font-size: 30rpx;
  color: #333;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}
.exchange-goods {
  margin-bottom: 12rpx;
  background: #ffffff;
}
.exchange-goods-item:last-child {
  border-bottom: none;
}
.exchange-goods-item {
  padding: 24rpx;
  display: flex;
  color: #666;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}
.exchange-goods-item .exchange-goods-img {
  width: 144rpx;
  height: 144rpx;
  position: relative;
}
.exchange-goods-item .exchange-goods-img image {
  display: block;
  width: 100%;
  height: 100%;
}
.exchange-goods-item .exchange-goods-info {
  padding-left: 16rpx;
  flex: 1;
}
.exchange-goods-item .exchang-goods-name {
  color: #333;
  font-size: 30rpx;
}
.exchange-goods-item .exchang-goods-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  margin-top: 16rpx;
}
.reason-cell {
  display: flex;
  font-size: 26rpx;
  color: #666;
  margin: 0 24rpx;
  padding: 24rpx 0;
  position: relative;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}
.reason-cell:last-child {
  border-bottom: none;
}
.reason-cell-hd {
  font-size: 30rpx;
  color: #333;
  word-break: keep-all;
  white-space: nowrap;
}
.reason-cell-hd text {
  display: inline;
}
.reason-cell-fd {
  flex: 1;
  text-align: right;
  padding-right: 60rpx;
}
.reason-textarea {
  display: flex;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  margin: 0 24rpx;
  font-size: 30rpx;
}
.bg-white {
  background: #ffffff;
}
.reason-textarea textarea{
  width: 100%;
  height: 138rpx;
  padding: 16rpx;
  flex: 1;
}
.exchang-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #ffffff;
  height: 98rpx;
  display: flex;
  z-index: 99;
}
.exchang-bottom .next-left {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 24rpx;
}
.exchang-bottom .goods-price {
  color: #333;
  font-size: 28rpx;
}
.exchang-bottom .next-right {
  width: 200rpx;
  height: 100%;
  background: #E53935;
  color: #ffffff;
  font-size: 32rpx;
  text-align: center;
  line-height: 98rpx;
}
.link-more {
  position: absolute;
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  right: 24rpx;
}