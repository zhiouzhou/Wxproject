/* pages/findGoods/findGoods.wxss */
page {
  background: #F2F2F2;
  padding-bottom: 88rpx;
}
.complaint-item {
  margin-bottom: 12rpx;
  font-size: 28rpx;
  color: #666;
  background: #ffffff;
}
.complaint-header {
  display: flex;
  justify-content: space-between;
  padding: 24rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  color: #333;
}
.complaint-header .header-title {
    color: #333;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
.complaint-header .time {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
}
.complaint-content {
  padding: 24rpx;
  word-break: break-all;
}
.complaint-icon {
  display: inline-block;
  width: 48rpx;
  height: 24rpx;
  margin-right: 8rpx;
}
.complaint-footer {
  padding: 16rpx 24rpx;
  display: flex;
  justify-content: flex-end;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}
.complaint-footer text {
  width: 144rpx;
  height: 56rpx;
  display: inline-block;
  text-align: center;
  line-height: 56rpx;
  border: 1rpx solid #E53935;
  border-radius: 3px;
  color: #E53935;
}
.add-complaint-btn {
  height: 88rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #E53935;
  color: #ffffff;
  position: fixed;
  left: 0;
  bottom: 0;
  font-size: 34rpx;
}
.add-complaint-btn image {
  width: 32rpx;
  height: 32rpx;
  display: inline-block;
  margin-right: 16rpx;
}
.empty-wrapper {
  padding-top: 72rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #333;
}
.empty-wrapper image {
  width: 152rpx;
  height: 152rpx;
  display: inline-block;
  margin-bottom: 24rpx;
}