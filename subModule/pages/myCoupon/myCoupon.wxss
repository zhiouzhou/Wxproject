/* pages/user/myCoupon/myCoupon.wxss */

page {
  background-color: #f2f2f2;
}

.shopCoupon {
  height: 88rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border-bottom: 2rpx solid #e2e2e2;
}

.shopCoupon-border {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #e53935;
  border: 1rpx solid #e53935;
  padding: 0 20rpx;
}

.shopCoupon-bg {
  height: 64rpx;
  line-height: 64rpx;
  font-size: 30rpx;
  color: #fff;
  background-color: #e53935;
  border-radius: 0px 4px 4px 0px;
  padding: 0 20rpx;
}

.shopCouponState {
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 2rpx solid #e2e2e2;
  background-color: #fff;
}

.usable-red {
  flex: 1;
  text-align: center;
  line-height: 80rpx;
  color: #e53935;
  font-size: 28rpx;
  position: relative;
}

.usable-gray {
  flex: 1;
  text-align: center;
  line-height: 80rpx;
  color: #999;
  font-size: 28rpx;
  position: relative;
}

.couponClass {
  height: 80rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 2rpx solid #e2e2e2;
  background-color: #fff;
}

.couponState {
  flex: 1;
  text-align: center;
  line-height: 80rpx;
  color: #e53935;
  font-size: 28rpx;
  position: relative;
}

.couponState_one {
  flex: 1;
  text-align: center;
  line-height: 80rpx;
  color: #999;
  font-size: 28rpx;
  position: relative;
}

.line-shop {
  width: 124rpx;
  height: 4rpx;
  background-color: #e53935;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 33%;
}

.line {
  width: 124rpx;
  height: 4rpx;
  background-color: #e53935;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 25%;
}

.couponType {
  height: 88rpx;
  background-color: #fff;
}

.couTypeList {
  height: 88rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  padding: 0rpx 24rpx;
  justify-content: space-between;
  align-items: center;
}

.couponSelect {
  width: 218rpx;
  height: 60rpx;
  border-radius: 4rpx;
  border: 2rpx solid #e53935;
  color: #e53935;
  font-size: 24rpx;
  text-align: center;
  line-height: 60rpx;
}

.couponSelect_one {
  width: 220rpx;
  height: 62rpx;
  border-radius: 4rpx;
  background-color: #f2f2f2;
  color: #333;
  font-size: 24rpx;
  text-align: center;
  line-height: 60rpx;
}

.myCouponDetail {
  position: relative;
}

.myCouponList {
  width: 702rpx;
  border-radius: 8rpx;
  margin: 24rpx auto;
  background: #fff;
  border-bottom: 8rpx solid #e53935;
  position: relative;
}

.logoName {
  display: flex;
  flex-direction: row;
  padding: 24rpx 0 24rpx 24rpx;
  justify-content: flex-start;
  align-items: center;
  
}

 .logoImg {
  width: 160rpx;
  height: 80rpx;
  border:1rpx solid #e5e5e5;
  border-radius: 6rpx;
  margin-right:24rpx;
} 

.name {
  color: #e53935;
  font-size: 30rpx;
  width: 390rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  
}

.time, .condition {
  color: #666;
  font-size: 24rpx;
  padding: 0rpx 0rpx 24rpx 24rpx;
}

.condition {
  line-height: 40rpx;
}

.icon {
  padding-right: 17rpx;
}

.money {
  position: absolute;
  top: 32rpx;
  right: 24rpx;
  color: #e53935;
}

.check {
  color: #477aac;
  font-size: 24rpx;
  text-align: right;
  padding-right: 25rpx;
  padding-bottom: 32rpx;
}

.more {
  height: 98rpx;
  width: 100%;
  background-color: #fff;
  text-align: center;
  line-height: 98rpx;
  font-size: 30rpx;
  color: #333;
  position: fixed;
  bottom: 0;
}

.noData {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 252rpx;
}

.noData-image {
  width: 152rpx;
  height: 152rpx;
}

.data-title {
  font-size: 32rpx;
  color: #666;
  padding: 48rpx 0;
}

.backHome {
  width: 288rpx;
  height: 88rpx;
  border: 2rpx solid #999;
  border-radius: 6rpx;
  text-align: center;
  font-size: 32rpx;
  color: #666;
  line-height: 88rpx;
}

.stateImg {
  width: 120rpx;
  height: 82rpx;
  position: absolute;
  bottom: 0;
  right: 0;
}
