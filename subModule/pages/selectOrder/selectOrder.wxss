/* pages/selectOrder/selectOrder.wxss */
page {
  background: #F2F2F2;
  font-size: 28rpx;
  color: #333;
}
.order-item {
  background: #fff;
  margin-bottom: 12rpx;
  font-size: 26rpx;
}
.order-header {
  display: flex;
  justify-content: space-between; 
  padding: 24rpx 24rpx 24rpx 84rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.1);
  position: relative;
}
.order-header .time {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #666;
}
.order-header .order-state {
  font-size: 24rpx;
}
.order-header .select-icon {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 36rpx;
  height: 36rpx;
  display: inline-block;
}
.order-content {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.1);
}
.product-wrapper {
  height: 186rpx;
  overflow-y: hidden;
  overflow-x: scroll;
  flex: 1;
}
.only-one-wrapper {
  display: flex;
  padding: 24rpx;
}
.only-one-wrapper .only-one-img {
  display: inline-block;
  width: 144rpx;
  height: 144rpx;
}
.only-one-wrapper .product-right {
  flex: 1;
  padding-left: 16rpx;
  color: #666;
  font-size: 24rpx;
  position: relative;
}
.only-one-product-name {
  color: #333;
  font-size: 28rpx;
}
.only-one-info-item {
  margin-top: 8rpx;
}
.only-one-total {
  position: absolute;
  right: 24rpx;
  bottom: 24rpx;
}
.product-item {
  width: 144rpx;
  color: #666;
  text-align: center;
  float: left;
}
.product-item image {
  width: 144rpx;
  height: 144rpx;
}
.order-content .order-total {
  color: #333;
  min-width: 100rpx;
  text-align: right;
}
.order-footer {
  padding: 24rpx;
  display: flex;
  justify-content: flex-end;
}
.mr24 {
  margin-right: 24rpx;
}