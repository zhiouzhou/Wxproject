
page {
  background: #F2F2F2;
  font-size: 28rpx;
}
.scan-no-goods{
  background: #fff;
  padding: 30rpx 0;
}
.scan-no-goods-icon{
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
.scan-no-goods-icon image{
  width: 120rpx;
  height: 120rpx;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
}
.scan-no-goods-text{
  display: flex;
  align-items: center;
  flex-direction: column;
  color: #666;
  font-size: 28rpx;
}
.scan-no-goods-text text:first-child{
  margin-bottom: 16rpx;
}
.scan-input-box{
  background: #fff;
  margin: 20rpx 0;
  padding: 0 24rpx;
}
.scan-input-column{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 92rpx;
  color: #333;
  font-size: 30rpx;
}
.scan-input-column:first-child{
  border-bottom: 1px solid #EDEDED;
}
.scan-input-column view{
  flex: 1;
  margin-left: 30rpx;
  text-align: right;
}
.scan-upload-box{
  background: #fff;
  padding: 24rpx;
}
.scan-upload-title{
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #333;
}
.scan-upload-title text:nth-of-type(1){
  color: #E53935;
}
.scan-upload-title text:nth-of-type(3){
  color: #999;
  margin-left: 10rpx;
}
.scan-upload-column{
  display: flex;
  align-items: center
}
.scan-upload-item{
  margin-top: 24rpx;
  margin-right: 24rpx;
  width: 140rpx;
  height: 140rpx;
  border:1px solid rgba(242,242,242,1);
  box-sizing: border-box;
  position: relative;
}
.default-pic{
  width: 72rpx;
  height: 72px;
  position: relative;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.real-pic{
  width: 140rpx;
  height: 140rpx;
  position: relative;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.remove-icon{
  position: absolute;
  right: -16rpx;
  top: -16rpx;
  width: 32rpx;
  height: 32rpx;
}
.remove-icon image{
  width: 32rpx;
  height: 32rpx; 
}
.scan-tips{
  margin: 24rpx;
  font-size: 26rpx;
  color: #999;
}
.scan-btn{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  background: #bdbdbd;
  font-size: 34rpx;
  color: #fff;
  display: flex;
  align-items: center;
}
.red-btn{
  background: #E53935;
}
.scan-btn text{
  flex: 1;
  text-align: center;
}