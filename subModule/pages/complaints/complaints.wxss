/* pages/complaints/complaints.wxss */
page {
  background: #F2F2F2;
  padding-bottom: 88rpx;
}
.complaint-item {
  margin-bottom: 12rpx;
  font-size: 28rpx;
  color: #666;
  background: #ffffff;
}
.complaint-header {
  display: flex;
  justify-content: space-between;
  padding: 24rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  color: #333;
}
.complaint-header .time {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
}
.complaint-content {
  padding: 24rpx;
  word-break: break-all;
}
.complaint-icon {
  display: inline-block;
  width: 48rpx;
  height: 24rpx;
  margin-right: 8rpx;
}
.complaint-footer {
  padding: 16rpx 24rpx;
  display: flex;
  justify-content: flex-end;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}
.complaint-footer text {
  width: 144rpx;
  height: 56rpx;
  display: inline-block;
  text-align: center;
  line-height: 56rpx;
  border: 1rpx solid #E53935;
  border-radius: 3px;
  color: #E53935;
}
.empty-wrapper {
  padding-top: 72rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #333;
}
.empty-wrapper image {
  width: 152rpx;
  height: 152rpx;
  display: inline-block;
  margin-bottom: 24rpx;
}
.complaint-bottom{
    height: 98rpx;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #fff;
    position: fixed;
    left: 0;
    bottom: 0;
    font-size: 22rpx;
    color: #333;
    box-shadow:0px -4px 8px 0px rgba(0,0,0,0.05);
}
.complaint-bottom .c-b-item{
    flex: 1;
    height: 100%;
    box-sizing: border-box;
}
.complaint-bottom .c-b-item image{
  width: 54rpx;
  height: 52rpx;
  display: block;
  margin:8rpx auto 5rpx;
}
.complaint-bottom .c-b-item:nth-of-type(2) image{
    transform:scale(2) translate3d(0,-20%,0);
}
.complaint-bottom .c-b-item text{
   display: block;
   text-align: center;
}