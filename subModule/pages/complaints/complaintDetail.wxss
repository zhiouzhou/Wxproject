/* pages/complaints/complaintDetail.wxss */
page {
  background: #F2F2F2;
  font-size: 28rpx;
  color: #333;
  padding-bottom: 88rpx;
}
.complaint {
  margin-bottom: 12rpx;
  background: #ffffff;
  position: relative;
}
.evaluate-pic {
  display: inline-block;
  width: 106rpx;
  height: 106rpx;
  position: absolute;
  top: 0;
  right: 0;
}
.complaint-header {
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}
.complaint-header .time {
  font-size: 24rpx;
  color: #999;
}
.blue-text {
  color: #477AAC
}
.complaint-content {
  padding: 24rpx;
  color: #666;
  position: relative;
  word-break: break-all;
}
.complaint-content .title {
  margin-bottom: 24rpx;
}
.complaint-content .pic-wrapper {
  margin-top: 24rpx;
  display: flex;
}
.complaint-content .pic-wrapper image {
  display: inline-block;
  width: 150rpx;
  height: 150rpx;
  margin-right: 24rpx;
}
.none-reply {
  margin-top: 64rpx;
  text-align: center;
  color: #999;
}
/*回复内容  */
.reply {
  margin-bottom: 12rpx;
  background: #ffffff; 
  color: #333;
}
.complaint-evaluated {
  background: #ffffff; 
  color: #333;
}
.evaluate-btn {
  position: fixed;
  width: 100%;
  height: 88rpx;
  bottom: 0;
  left: 0;
  line-height: 88rpx;
  color: #ffffff;
  background: #e53935;
  text-align: center;
  font-size: 34rpx;
}
.evaluate-title {
  padding: 24rpx;
  background: #FFFAF3;
  color: #333;
  display: flex;
  margin-bottom: 12rpx;
  align-items: center;
}
.evaluate-title image{
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
  margin-right: 16rpx;
}