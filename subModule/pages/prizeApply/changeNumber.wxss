page{
  background-color:#f2f2f2;
}
.prizeMessage{
  margin:16rpx 24rpx;
  background-color:#fff;
   padding-bottom:16rpx; 
}
.name-number{
  width:28rpx;
  height:28rpx;
  background-color:#e53935;
  text-align: center;
  line-height: 28rpx;
  color:#fff;
  margin-right:11rpx;
}
.prize-name{
  display:flex;
  flex-direction: row;
  align-items: center;
  padding-top:34rpx;
}
.remark-message{
  background-color:#F7F7F7;
  height: 120rpx;
  padding: 17rpx 22rpx;
  color:#333;
  font-size:30rpx;
}
.prizeNumber{
  display:flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  margin:0 24rpx;
  padding:24rpx 0;
  /* border-bottom:2rpx solid #E8EAED; */
}
.number{
  display: flex;
  flex-direction: row;
  height:60rpx;
  width:220rpx;
  border:1rpx solid #E8EAED;
}
.change-num-icon{
  width:62rpx;
  height:60rpx;
  text-align: center;
  line-height: 60rpx;
}
.num-input{
  width:96rpx;
  height:60rpx;
  text-align: center;
  line-height: 60rpx;
  border-left:1rpx solid #E8EAED;
  border-right:1rpx solid #E8EAED;
}
.change-img{
  width:24rpx;
  height:18rpx;
}
.change-img-add{
  width:24rpx;
  height:24rpx;
}
.delete{
  width:96rpx;
  height:48rpx;
  line-height: 48rpx;
  text-align: center;
  border:1rpx solid #BFBFBF;
  color:#666;
  font-size: 26rpx;
  margin-top:16rpx;
  border-radius: 4rpx;
  margin-left:582rpx;
}
.addPrize{
  width:180rpx;
  height:56rpx;
  text-align: center;
  line-height: 56rpx;
  color:#e53935;
  font-size:26rpx;
  border:2rpx solid #e53935;
  border-radius: 4rpx;
  margin:24rpx 24rpx 12rpx 546rpx ;
}

.submitApply{
  position: fixed;
  bottom:0;
  width:100%;
  height:96rpx;
  text-align: center;
  line-height: 96rpx;
