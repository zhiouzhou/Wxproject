page{
  background-color:#f2f2f2;
}
.applyMessage{
  margin:16rpx 24rpx;
  background-color:#fff;
}
.user-message{
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom:2rpx solid #E8EAED;
  margin:0 24rpx;
  padding:24rpx 0;
  justify-content:space-between;

}
.address-icon{
  width:31rpx;
  height:40rpx;
  padding-right:20rpx;
}

.address-select{
  width:32rpx;
  height:32rpx;
}

.applyRemark{
  padding:24rpx;
}
.remark-icon-img{
  width:34rpx;
  height:32rpx;
  padding-right:17rpx;
}
.remark-icon{
  display:flex;
  flex-direction: row;
  align-items: center;
  padding-bottom:24rpx;
}
.remark-message{
  background-color:#F7F7F7;
  height: 120rpx;
  padding: 17rpx 22rpx;
  color:#333;
  font-size:30rpx;
}
.prizeMessage{
  margin:16rpx 24rpx;
  background-color:#fff;
  position: relative;
}
.removeList{
  width:42rpx;
  height:42rpx;
  position: absolute;
  top:-8rpx;
  right:-15rpx;
}
.name-number{
  width:28rpx;
  height:28rpx;
  background-color:#e53935;
  text-align: center;
  line-height: 28rpx;
  color:#fff;
  margin-right:11rpx;
}
.prize-name{
  display:flex;
  flex-direction: row;
  align-items: center;
  padding-top:34rpx;
}
.prizeNumber{
  display:flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin:0 24rpx;
  padding:16rpx 0;
  border-top:2rpx solid #E8EAED; 
}
.number{
  display: flex;
  flex-direction: row;
  height:60rpx;
  width:220rpx;
  border:1rpx solid #E8EAED;
}
.change-num-icon{
  width:62rpx;
  height:60rpx;
  text-align: center;
  line-height: 60rpx;
}
.num-input{
  width:96rpx;
  height:60rpx;
  text-align: center;
  line-height: 60rpx;
  border-left:1rpx solid #E8EAED;
  border-right:1rpx solid #E8EAED;
}
.change-img{
  width:24rpx;
  height:18rpx;
}
.change-img-add{
  width:24rpx;
  height:24rpx;
}
.addPrize{
  width:180rpx;
  height:56rpx;
  text-align: center;
  line-height: 56rpx;
  color:#e53935;
  font-size:26rpx;
  border:2rpx solid #e53935;
  border-radius: 4rpx;
  
  margin:8rpx 24rpx 12rpx 546rpx;
}

.submitApply{
  position: fixed;
  bottom:0;
  width:100%;
  height:96rpx;
  text-align: center;
  line-height: 96rpx;
  background-color: #bbb;
  font-size:34rpx;
  color:#fff;
  /* box-shadow:2px 0px 8px rgba(187,187,187,0.1)  */
}
.submitApply-red{
  position: fixed;
  bottom:0;
  width:100%;
  height:96rpx;
  text-align: center;
  line-height: 96rpx;
  background-color: #e53935;
  font-size:34rpx;
  color:#fff;
  /* box-shadow:2px 0px 8px rgba(187,187,187,0.1)  */
}