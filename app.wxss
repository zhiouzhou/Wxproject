@import "./assets/styles/animation.wxss";
@import "./assets/styles/color.wxss";
@import "./assets/styles/font.wxss";
@import "./components/yjp-components.wxss";

page {
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  -webkit-font-smoothing: subpixel-antialiased;
  border-top: 2rpx solid rgba(0, 0, 0, 0.1);
}
.clearfix::after{
		clear: both;
	    display: block;
	    content: "...";
	    visibility: hidden;
	    height: 0;
	    font-size: 0;
 }

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.go-to-login-float-button {
  position: fixed;
  right: 24rpx;
  bottom: 170rpx;
  width: 88rpx;
  height: 88rpx;
}

.back-to-top-float-button {
  position: fixed;
  right: 24rpx;
  bottom: 282rpx;
  width: 88rpx;
  height: 88rpx;
  z-index: 9;
}

.go-to-shop-cart-float-button {
  position: fixed;
  right: 24rpx;
  bottom: 182rpx;
  width: 88rpx;
  height: 88rpx;
}
.go-to-home-float-button {
  position: fixed;
  right: 24rpx;
  bottom: 382rpx;
  width: 88rpx;
  height: 88rpx;
}

.shop-cart-float-button-corner-num {
  position: fixed;
  right: 24rpx;
  bottom: 240rpx;
  width: 28rpx;
  height: 28rpx;
  color: #fff;
  background-color: #e53935;
  border-radius: 50%;
  text-align: center;
  line-height: 28rpx;
  font-size: 20rpx;
}

.scroll-page-wrap {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
}

.cant-buy-bottom-bar {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  background-color: #bdbdbd;
  text-align: center;
  line-height: 98rpx;
  font-size: 32rpx;
  color: #fff;
  z-index:999;
}

.cant-buy-bottom-bar-red {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  background-color: #e53935;
  text-align: center;
  line-height: 98rpx;
  font-size: 32rpx;
  color: #fff;
  z-index: 10;
}
.no-data-tipbar{
  margin-top:200rpx;
  text-align: center;
}
.tipbar-pic{
  width: 152rpx;
  height: 152rpx;
}
.tipbar-text{
  font-size:28rpx;
  color:#666;
  padding:30rpx 0 20rpx;
  display:flex;
  align-items:center;
  margin-left:50%;
  transform:translateX(-40%);
}
.tipbar-text .icon{
  width:40rpx;
  height:40rpx;
  margin-right: 15rpx;
}
.underwrite-list-tip-btn {
    display: inline-block;
    color: #E53935;
    border: 1px solid #E53935;
    border-radius: 2px;
    padding: 8rpx 14rpx;
    font-size: 28rpx;
}
.go-to-sign-in{
  position:fixed;
  right:0;
  bottom:380rpx;
  width:110rpx;
  height:136rpx;
  z-index: 2;
  transition: all 0.4s;
}
.sign-in-active{
  right:-110rpx;
}
/*全场通用优惠券提示*/
.coupon-discount-text{
  display: flex;
  justify-content: center;
  align-items: center;
  background:rgba(255,250,243,1);
  font-size: 24rpx;
  color: #333;
}
.coupon-discount-text image:nth-of-type(1){
   width: 60rpx;
   height: 60rpx;
   margin: 0 16rpx; 
}
.coupon-discount-text text{
  font-size: 24rpx;
  padding: 10rpx 0;
}
.coupon-discount-text image:nth-of-type(2){
   width: 80rpx;
   height: 80rpx;
   margin-right:10rpx;
}
/*为你推荐*/
.recommend-list-title{
   height: 88rpx;
   display: flex;
   justify-content: center;
   align-items: center;
}
.recommend-list-title image{
   width: 316rpx;
   height: 32rpx;
}
.product-recommend-wrap{
   float:left;
   width:50%;
   border:1rpx solid #e6e6e6;
   box-sizing: border-box;
}