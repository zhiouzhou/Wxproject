.shops-wrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  background-color: #fff;
  margin-top: 16rpx;
}

.shops-hd {
  height: 72rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.1);
}

.shops-list-wrap {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  overflow: scroll;
}

.shops-list-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  min-width: 33.3333%;
  padding: 24rpx 0;
  box-sizing: border-box;
}

.shops-logo {
  width: 208rpx;
  height: 104rpx;
}

.shops-button {
  width: 148rpx;
  height: 56rpx;
  border-radius: 28rpx;
  border: 2rpx solid #e53935;
  box-sizing: border-box;
  text-align: center;
  line-height: 56rpx;
}
