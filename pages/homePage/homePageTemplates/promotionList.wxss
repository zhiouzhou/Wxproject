.promotionList-wrap {
  padding: 24rpx 0;
  margin-top: 16rpx;
  box-sizing: border-box;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
}

.promotionList-hd {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  margin-bottom: 24rpx;
  margin-left: 24rpx;
}

.promotionList-hd-name {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.promotionList-hd-time {
  margin-top: 16rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.promotionList-hd-arrow {
  height: 32rpx;
  width: 32rpx;
}

.promotionList-big-img {
  width: 100%;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.promotionList-horizontal-wrap {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  overflow: scroll;
}

.promotionList-horizontal-item-wrap {
  height: 360rpx;
  margin-left: 24rpx;
  min-width: 192rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.promotionList-horizontal-img {
  width: 192rpx;
  height: 192rpx;
  box-sizing: border-box;
  border: 2rpx solid #e8eaed;
}

.promotionList-horizontal-red-button {
  height: 48rpx;
  width: 120rpx;
  border-radius: 24rpx;
  background-color: #e53935;
  color: #fff;
  line-height: 48rpx;
  text-align: center;
  font-size: 26rpx;
}

.promotionList-horizontal-grey-button {
  height: 48rpx;
  width: 120rpx;
  border-radius: 24rpx;
  background-color: #bdbdbd;
  color: #fff;
  line-height: 48rpx;
  text-align: center;
  font-size: 26rpx;
}

.promotionList-twoside-wrap {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  overflow: scroll;
}

.promotionList-twoside-item-wrap {
  height: 468rpx;
  width: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: stretch;
  padding: 24rpx;
  box-sizing: border-box;
  margin-left: 24rpx;
  border: 2rpx solid #e8eaed;
}

.promotionList-twoside-img-area {
  position: relative;
  height: 240rpx;
  width: 240rpx;
}

.promotionList-twoside-img {
  position: absolute;
  width: 100%;
  height: 100%;
}

.promotionList-twoside-stock-text {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 26rpx;
  text-align: center;
  line-height: 26rpx;
  color: #fff;
  font-size: 20rpx;
  background-color: rgba(0, 0, 0, 0.4);
}

.promotionList-twoside-reduce-text {
  position: absolute;
  top: 0;
  right: 0;
  width: 60rpx;
  height: 60rpx;
  background-color: #e53935;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.promotionList-twoside-price {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: flex-start;
}

.promotionList-vertical-wrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
}

.promotionList-vertical-item-wrap {
  width: 100%;
}
