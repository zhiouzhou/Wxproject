.shops-product-wrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  background-color: #fff;
  margin-top: 16rpx;
}

.shops-product-hd {
  height: 72rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.1);
}

.shops-product-list-wrap {
  height: 284rpx;
  position: relative;
}

.shops-product-button-left {
  position: absolute;
  top: 118rpx;
  left: 16rpx;
  width: 48rpx;
  height: 48rpx;
  transform: rotate(180deg);
}

.shops-product-button-right {
  position: absolute;
  top: 118rpx;
  right: 16rpx;
  width: 48rpx;
  height: 48rpx;
}

.shops-product-swiper {
  position: absolute;
  height: 100%;
  width: 100%;
  padding-top: 24rpx;
  padding-bottom: 24rpx;
  box-sizing: border-box;
}

.shops-product-list-item {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
}

.shops-product-img {
  width: 192rpx;
  height: 192rpx;
}

.shops-product-right {
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
  margin-right: 24rpx;
  margin-left: 16rpx;
}

.shops-product-info-wrap {
  height: 192rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: stretch;
}

.shops-product-price {
  flex: 1;
  margin-top: 8rpx;
}

.shops-product-spec-wrap {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.shops-product-info-tag-wrap {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-top: 10rpx;
}

.shops-product-delivery-mode-tag {
  border: 2rpx solid #d91f2f;
  color: #d91f2f;
  font-size: 22rpx;
  line-height: 28rpx;
  text-align: center;
  padding: 0 4rpx;
  border-radius: 4rpx;
}

.shops-product-button {
  width: 144rpx;
  height: 56rpx;
  background-color: #f2524b;
  border-radius: 4rpx;
  text-align: center;
  line-height: 56rpx;
}

.promotionList-twoside-wrap {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  overflow: scroll;
}

.promotionList-twoside-item-wrap {
  height: 468rpx;
  width: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: stretch;
  padding: 24rpx;
  box-sizing: border-box;
  margin-left: 24rpx;
  border: 2rpx solid #e8eaed;
}

.promotionList-twoside-img-area {
  position: relative;
  height: 240rpx;
  width: 240rpx;
}

.promotionList-twoside-img {
  position: absolute;
  width: 100%;
  height: 100%;
}

.promotionList-twoside-stock-text {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 26rpx;
  text-align: center;
  line-height: 26rpx;
  color: #fff;
  font-size: 20rpx;
  background-color: rgba(0, 0, 0, 0.4);
}

.promotionList-twoside-reduce-text {
  position: absolute;
  top: 0;
  right: 0;
  width: 60rpx;
  height: 60rpx;
  background-color: #e53935;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.promotionList-twoside-price {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: flex-start;
}

.shops-products-wrap {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 0 24rpx 0;
  box-sizing: border-box;
  overflow-x: scroll;
}
