.activity-group-list{
  background: #fff;
  padding:24rpx;
  margin-top: 16rpx;
}
.activity-pic{
  width: 700rpx;
  height: 400rpx;
}
.activity-pic image{
  width: 100%;
  height: 100%;
  padding: 0 !important;
}
.activity-name{
  font-size: 32rpx;
  color: #333;
  margin: 24rpx 0;
  font-weight: bold;
}
.activity-spec{
	display:flex;
	align-items: flex-end;
  justify-content: space-between;
}
.activity-goods .price{
  color: #E53935;
  font-size: 36rpx;
}
.activity-goods .small{
  font-size: 24rpx;
}
.activity-goods .specification{
  color: #666;
  font-size: 26rpx;
  margin-left: 24rpx;
}
.activity-btn{
  width:144rpx;
  height:56rpx;
  line-height: 56rpx;
  text-align: center;
  background:linear-gradient(90deg,rgba(244,107,101,1),rgba(229,57,53,1));
  border-radius:4px;
  font-size: 28rpx;
  color: #fff;
}