/* pages/user/user.wxss */

@import "../homePage/homePageTemplates/countryHdBanners.wxss";

page {
  background-color: #f2f2f2;
}

.user-info-wrap {
  width: 100%;
  height: 220rpx;
  background-color: #fff;
  box-sizing: border-box;
  position: relative;
}

.user-info-bg {
  position: absolute;
  width: 100%;
  height: 100%;
}

.user-avatar-out-circle {
  position: absolute;
  top: 48rpx;
  left: 40rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.user-avatar-in-circle {
  width: 116rpx;
  height: 116rpx;
  border-radius: 50%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.user-avatar-img {
  width: 116rpx;
  height: 116rpx;
}

.user-info {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 192rpx;
  width: 500rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}

.user-nickname {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.user-nickname-img {
  width: 28rpx;
  height: 28rpx;
  margin-left: 16rpx;
}

.user-state {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.auth-state-wrap {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 24rpx;
  background-color: #FDE8E4;
  padding: 0 6rpx;
  /* padding: 0 12rpx; */
}

.authenState {
  padding-right: 12rpx;
}

.auth-state-img {
  width: 28rpx;
  height: 28rpx;
  margin-right: 6rpx;
}

.user-level-wrap {
  position: absolute;
  left: 0;
  bottom: -6rpx;
  width: 120rpx;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  border-radius: 24rpx;
  background-color: #FFBE00;
  padding: 0;
}

.orders-wrap {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
  background-color: #fff;
  border-top: 2rpx solid #EDEDED;
  padding: 40rpx 0;
}

.orders-title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.orders-order {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  padding: 0;
}

.order-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 32rpx;
}

.order-item-img {
  width: 56rpx;
  height: 56rpx;
}

.order-item-dot {
  font-size: 22rpx;
  color: #fff;
  background-color: #e53935;
  line-height: 24rpx;
  height: 24rpx;
  width: 50rpx;
  border-radius: 16rpx;
  text-align: center;
  margin-bottom: -24rpx;
  margin-right: -30rpx;
  z-index: 1;
}

.assets-wrap {
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  margin-top: 16rpx;
  padding: 32rpx 0;
}

.user-page-banner{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
  background-color: #fff;
}

.assets-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.others-wrap {
  background-color: #fff;
  margin-top: 16rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.others-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.1);
}

.others-right-wrap {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.others-right-img {
  width: 27rpx;
  height: 27rpx;
}

.other-right-num {
  background-color: #e53935;
  line-height: 24rpx;
  height: 24rpx;
  width: 50rpx;
  border-radius: 16rpx;
  text-align: center;
}

.exit-button {
  height: 88rpx;
  margin: 48rpx 24rpx;
  background-color: #fff;
  text-align: center;
  line-height: 88rpx;
  border-radius: 8rpx;
}
.user-center-new-icon{
  width:52rpx;
  height:52rpx;
  margin-left:8rpx;
}
.flex-center{
  display:flex;
  flex-direction:row;
  align-items:center;
}
.sign-in-btn{
  position:absolute;
  top:50%;
  transform:translateY(-50%);
  right:8rpx;
}
.qiandao-img{
  width: 144rpx;
  height: 76rpx;
}

.user-tool{
  background: #fff;
  padding: 40rpx 0;
  margin: 20rpx 0 60rpx;
}
.user-tool-bar{
  font-size: 34rpx;
  color: #333;
  padding: 0 24rpx;
}
.user-tool-wrap{
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.tool-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 25%;
  margin-top: 32rpx;
}
.tool-item-title{
  font-size: 26rpx;
  color: #333;
}
.tool-img{
  width: 56rpx;
  height: 56rpx;
  margin-bottom: 20rpx;
}
.authen-pass{
  background: #FDE8E4;
  color: #F2524B;
}
.authen-nopass{
  background: #F2F2F2;
  color: #999999;
}
.sign-in-box{
  position:absolute;
  top:50%;
  transform:translateY(-50%);
  right:0;
  font-size: 30rpx;
  background: #F2F2F2;
  border-top-left-radius: 32rpx;
  border-bottom-left-radius: 32rpx;
}
.sign-in-wrap{
  width: 148rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.sign-in-img{
  width: 32rpx;
  height: 32rpx;
  margin: 0 8rpx 0 26rpx;
}
.sign-in-red{
  color: #F2524B;
}
.sign-in-gray{
  color: #999;
}
.orders-title-right{
  display: flex;
  align-items: center;
}
.orders-title-right image{
  width: 12rpx;
  height: 20rpx;
  margin-left: 8rpx;
}