/* pages/shopCart/selectBonus.wxss */

page {
  background-color: #f2f2f2;
}

.bonus-wrap {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  padding: 32rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-top: 2rpx solid rgba(0, 0, 0, 0.1);
}

.bonus-select-img {
  width: 48rpx;
  height: 48rpx;
}

.bonus-detail {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: stretch;
  border-top: 2rpx solid rgba(0, 0, 0, 0.1);
}

.select-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  padding-left: 24rpx;
  box-sizing: border-box;
}

.confirm-button {
  width: 200rpx;
  background-color: #e53935;
  text-align: center;
  line-height: 98rpx;
}
