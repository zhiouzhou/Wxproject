/* pages/message/message.wxss */

page {
  background-color: #f2f2f2;
}

.header {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-top: 12rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.header-item {
  flex: 1;
  position: relative;
  height: 144rpx;
}

.header-item-img {
  position: absolute;
  top: 12rpx;
  left: 50%;
  transform: translateX(-50%);
  height: 80rpx;
  width: 80rpx;
}

.info-text {
  position: absolute;
  bottom: 12rpx;
  left: 50%;
  transform: translateX(-50%);
}

.info-index {
  position: absolute;
  height: 4rpx;
  width: 24rpx;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}

.info-count {
  position: absolute;
  right: 12rpx;
  top: 0;
  background-color: #e53935;
  height: 32rpx;
  min-width: 24rpx;
  text-align: center;
  line-height: 32rpx;
  padding: 0 8rpx;
  border-radius: 16rpx;
  color: #fff;
  font-size: 20rpx;
}
