/* pages/dealer/dealer.wxss */

page {
  border-top: 0rpx;
  background-color: #f2f2f2;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.shop-hd {
  position: relative;
  width: 750rpx;
  height: 234rpx;
}

.shop-hd-bg {
  position: absolute;
  width: 100%;
  height: 100%;
}

.shop-hd-top {
  position: absolute;
  top: 16rpx;
  width: 100%;
  height: 56rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0 24rpx;
  box-sizing: border-box;
  align-items: center;
}

.shop-search-input-wrap {
  flex: 1;
  height: 100%;
  background: rgba(255, 255, 255, 1);
  opacity: 0.8;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 8rpx;
}

.shop-hd-search-button {
  margin-left: 24rpx;
}

.shop-hd-search-img {
  width: 36rpx;
  height: 36rpx;
  margin: 0 16rpx;
}

.shop-hd-search-input {
  flex: 1;
  margin-right: 16rpx;
}

.shop-hd-bottom {
  position: absolute;
  bottom: 32rpx;
  width: 100%;
  height: 66rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  padding-right: 24rpx;
  box-sizing: border-box;
  align-items: center;
}

.shop-logo {
  height: 100%;
  width: 132rpx;
}

.shop-score {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.shop-score-star {
  width: 48rpx;
  height: 48rpx;
}

.shop-info-wrap {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.shop-favorite {
  width: 158rpx;
  height: 58rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border-radius: 64rpx;
}

.shop-favorite-img {
  width: 26rpx;
  height: 26rpx;
  margin-right: 14rpx;
}

.shop-switcher {
  height: 130rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: stretch;
  background-color: #fff;
}

.shop-switch-item {
  flex: 1;
  height: 100%;
  position: relative;
}

.shop-switch-item-content {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.slider {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 160rpx;
  height: 4rpx;
  background-color: #e53935;
}

.shop-tab-img {
  width: 36rpx;
  height: 36rpx;
}

.about-shop {
  margin-top: 12rpx;
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.about-item {
  height: 96rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.1);
}

.about-item-summary {
  padding: 32rpx 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}

.shop-coupons {
  flex: 1;
  padding: 0 24rpx;
  box-sizing: border-box;
  overflow-y: scroll;
}

.shop-coupon {
  height: 156rpx;
  display: flex;
  flex-direction: row;
  align-items: stretch;
  margin-top: 24rpx;
}

.coupon-left {
  width: 158rpx;
  position: relative;
}

.coupon-left-img, .coupon-right-img {
  position: absolute;
  width: 100%;
  height: 100%;
}

.coupon-left-content {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.coupon-middle {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 32rpx 16rpx 24rpx 16rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.coupon-right {
  width: 151rpx;
  position: relative;
}

.coupon-right-content {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.receive-button-unreceived {
  width: 110rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 26rpx;
  color: #fff;
  padding: 8rpx 0;
  background-color: #ef5350;
  border-radius: 30rpx;
}

.receive-button-received {
  width: 110rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 26rpx;
  color: #bdbdbd;
  padding: 8rpx 0;
  background-color: #e5e5e5;
  border-radius: 30rpx;
}

.coupons-sale-out-img {
  width: 112rpx;
  height: 112rpx;
}

.shop-products {
  flex: 1;
  margin-top: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.products-menu-wrap {
  height: 88rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: stretch;
  justify-content: space-between;
}

.products-menu-item {
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.products-menu-item-img {
  width: 24rpx;
  height: 24rpx;
}

.scroll-wrap {
  flex: 1;
  position: relative;
}

.product-list-wrap {
  position: absolute;
  width: 100%;
  height: 100%;
}

.shop-coupon-empty {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.shop-coupon-empty-img {
  width: 152rpx;
  height: 152rpx;
  margin-top: 90rpx;
  margin-bottom: 60rpx;
}

.shop-products-empty {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.shop-activities {
  flex: 1;
  margin-top: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  overflow-y: scroll;
}

.shop-activity {
  background-color: #fff;
  padding: 24rpx;
  box-sizing: border-box;
  margin-bottom: 12rpx;
}

.activity-title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.activity-arrow {
  width: 36rpx;
  height: 36rpx;
}

.activity-img {
  width: 702rpx;
  height: 234rpx;
}
