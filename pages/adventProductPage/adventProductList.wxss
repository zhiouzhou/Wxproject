/* pages/product/productList.wxss */

page {
  background-color: #f2f2f2;
}

.search-section-wrap {
  width: 100%;
  height: 92rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.1);
}

.search-wrap {
  margin-left: 24rpx;
  flex: 1;
  height: 60rpx;
  box-sizing: border-box;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
  border-radius: 4rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.search-img {
  width: 28rpx;
  height: 28rpx;
  margin-left: 14rpx;
  margin-right: 15rpx;
}

.search-input {
  margin-right: 24rpx;
  flex: 1;
}

.product-menu-wrap {
  height: 88rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  background-color: #fff;
}

.product-menu-item {
  width: 33.3333%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.product-menu-img {
  width: 32rpx;
  height: 32rpx;
  margin-left: 8rpx;
}

.delivery-menu-wrap {
  height: 88rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  background-color: #fff;
}

.delivery-menu-item {
  height: 60rpx;
  width: 218rpx;
  text-align: center;
  background-color: #f2f2f2;
  border-radius: 4rpx;
  color: #333;
  line-height: 53rpx;
}

.delivery-menu-item-select {
  height: 60rpx;
  width: 218rpx;
  text-align: center;
  background-color: #fff;
  border: 2rpx solid #e53935;
  border-radius: 4rpx;
  box-sizing: border-box;
  color: #e53935;
  line-height: 53rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.delivery-menu-item-img {
  width: 28rpx;
  height: 14rpx;
  margin-right: 16rpx;
}

.empty-product-list {
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.empty-product-list-img {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 40rpx;
}

.gather-red-text {
  padding: 0 8rpx;
  box-sizing: border-box;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  color: #e53935;
  border: 2rpx solid #e53935;
  font-size: 22rpx;
  margin-right: 16rpx;
  border-radius: 4rpx;
}

.gather-green-text {
  padding: 0 8rpx;
  box-sizing: border-box;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  color: #61ba68;
  border: 2rpx solid #61ba68;
  font-size: 22rpx;
  margin-right: 16rpx;
  border-radius: 4rpx;
}
.bulk-tip{
  background:#fffaf3;
  display:flex;
  justify-content:flex-start;
  font-size:24rpx;
  width:100%;
  padding:20rpx 0 20rpx 20rpx;
  box-sizing:border-box;
  z-index:10;
}
.bulk-tip-left{
  display:inline-block;
  border:2rpx solid #d91f2f;
  color: #e53935;
  box-sizing:border-box;
  border-radius:4rpx;
  width:80rpx;
  text-align:center;
  height:40rpx;
  line-height:40rpx;
}
.bulk-tip-text{
  margin-left: 20rpx;
  font-size: 12px;
  line-height: 40rpx;
  flex:1;
  color:#333;

}
.bulk-tip-del{
  display:inline-block;
  width:48rpx;
  height:48rpx;
  margin-top:-6rpx;
}