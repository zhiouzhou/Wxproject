/* pages/login/bindPhone.wxss */

.notice {
  width: 100%;
  height: 72rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  background-color: #f2f2f2;
  text-align: left;
  font-size: 24rpx;
  color: #666;
  line-height: 72rpx;
}

.info-wrap {
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.phone-num-wrap {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding: 28rpx 0;
  margin: 0 24rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.10);
}

.account-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.account-img {
  width: 48rpx;
  height: 48rpx;
  margin-right: 12rpx;
}

.code-text {
  align-self: flex-end;
  margin-right: 24rpx;
  margin-bottom: 48rpx;
}

.vcode-wrap {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: stretch;
  height: 92rpx;
  box-sizing: border-box;
  margin: 48rpx 24rpx 32rpx 24rpx;
}

.confirm-button {
  height: 88rpx;
  margin-left: 24rpx;
  margin-right: 24rpx;
  box-sizing: border-box;
  color: #fff;
  font-size: 34rpx;
  text-align: center;
  line-height: 88rpx;
  border-radius: 8rpx;
  background-color: #e53935;
}
